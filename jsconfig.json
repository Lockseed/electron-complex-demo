{
  "compilerOptions": {
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "target": "esnext",
    "module": "NodeNext",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    "out",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn",
    ".vite",
    ".temp",
    "src/renderer"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["node", "electron"]
  }
}
