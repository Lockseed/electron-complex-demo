{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "../",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "build",
    "out",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn",
    ".vite",
    ".temp"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
